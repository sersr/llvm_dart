struct BBs<T> {
  b: i64,
  s: Box<T>,
}
struct Box<T> {
  ptr: *BoxData<T>,
}

struct BoxData<T> {
  size: usize,
  data: T,
}

impl<T> Box<T> {
  static fn new(data: T) Self {
    final ptr = malloc(sizeOf(BoxData<T>)) as *BoxData<T>;
    ptr.data = data;
    ptr.size = 1;
    return Box { ptr };
  }

  fn getValue() &T {
    &self.ptr.data;
  }

  fn getSize() usize {
    self.ptr.size;
  }
}

impl Stack for Box<i32> {
  fn addStack() {
    self.ptr.size += 1;
    printf("add     box: %d, %d\n", *self.getValue(), self.getSize());
  }
  
  fn removeStack() {
    self.ptr.size -= 1;
    printf("remove  box: %d, %d\n",  self.ptr.data, self.ptr.size);
    if self.ptr.size <= 0 {
      free(self.ptr);
    }
  }

  fn replaceStack(src: &Self) {
    self.ptr.size -= 1;
    src.ptr.size += 1;
    printf("replace box: %d, %d | %d, %d\n", self.ptr.data, self.ptr.size, src.ptr.data, src.ptr.size);
    if self.ptr.size <= 0 {
      free(self.ptr);
    }
  }
}
