fn sig_handler(sig: i32) {
  printf("sig %d\n", sig);

  exit(1);

}

fn drop_handler() {
  let y =stack_t {};
  y.ss_flags = 4;
  y.ss_sp = null;
  y.ss_size = 131072;

  sigaltstack(&y, null);
  munmap(sig_data, 131072);
}

